        <div class="container text-center">
        <h1 class="mt-5 text-white font-weight-light">My metrics</h1>
        </div>

        <div class="row">
            <div class="col-sm-6">
                <div class="card">
                  <div class="card-body">
                    <h5 class="card-title">Value</h5>
                    <p class="card-text"><%- metrics.value %></p>
                  </div>
                </div>
            </div>

            <div class="col-sm-6">
                <div class="card">
                  <div class="card-body">
                    <h5 class="card-title">Timestamp</h5>
                    <p class="card-text"><%- metrics.timestamp %></p>
                  </div>
                </div>
            </div>


            <div class="col-sm-6">
                <div class="card">
                    <div class="card-body">
                        <h5 class="card-title">Uptade metric</h5>
                        <form action="/new" method="POST"> 
                            <div class="form-group">
                                <input name="value" class="form-control" id="exampleInputPassword1" placeholder="Value">
                            </div>
                            <button type="submit" class="btn btn-primary">Submit</button>
                            <button type="submit" class="btn btn-primary">Delete</button>
                        </form>
                    </div>
                </div>
            </div>

        </div>
          

